@model CommentViewModel

@{ }

<div>
    <form method="post" asp-controller="Home" asp-action="comment" class="mb-1">
        <input asp-for="BlogId" type="hidden" />
        <input asp-for="MainCommentId" type="hidden" />
        <input asp-for="Message" class="commentBox" style="border-radius: 7px; border:1px solid;" />
        <button type="submit" class="btn btn-dark btn-sm button" style="border-radius: 7px; border: white 2px;">Comment</button>
    </form>
</div>